{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [ "node_modules/@types", "./typings.d.ts" ]
  },
  "exclude": [
    "node_modules"
  ]
}